<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300%>')">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
<% @list.bookmarks.each do |b| %>
  <div class="card-product mb-3">
    <img src=<%= b.movie.poster_url %>>
    <div class="card-product-infos">
      <h2><%= b.movie.title %></h2>
      <p><%= b.movie.overview %></p>
      <p>Rating: <%= b.movie.rating %></p>
      <p>"<%= b.comment %>"</p>
      <%= link_to list_bookmark_path(@list, b), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      Remove from list <i class="fa-regular fa-trash-can"></i></i>
     <% end %>
    </div>
</div>
     <% end %>
<%= link_to "+ Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
<%= link_to "<< Back to all lists", lists_path, class: "btn btn-flat" %>
</div>
