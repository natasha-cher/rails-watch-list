
<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300%>')">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">

<% @list.movies.each do |movie| %>
<div class="card-product mb-3">
  <img src=<%= movie.poster_url %>>
  <div class="card-product-infos">
    <h2><%= movie.title %></h2>
    <p><%= movie.overview %></p>
     <p>Rating: <%= movie.rating %></p>
     <% end %>
     <% @list.bookmarks.each do |bookmark| %>
     <p>"<%= bookmark.comment %>"</p>
     <%= link_to "Delete", list_bookmark_path(@list, bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
     <% end %>
  </div>
</div>
<%= link_to "<< Back to all lists", lists_path, class: "btn btn-flat" %>

</div>
